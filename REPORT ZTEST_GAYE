REPORT ZTEST_GAYE.

*değişken tanımlama

data adi(30) type c value 'Gamze'.  "ilk eğer atanmış hali
data soyadi(35) type c.
data adres type string.
data yas(3) type n.
data para type p decimals 2. "decimals irgülen sonra 2 basamak al demek
data tarih type d.
data saat type t.

CONSTANTS c_pi_sayisi TYPE p DECIMALS 2 VALUE '3.14'. "constant değer tanımlama
*değişkenlere değer atama

*adi = 'Gaye'.
soyadi = 'Durmaz'.
adres ='deneme adres'.
yas = 20.
para = '20.19'.
tarih = '20190909'.
saat = '11.25'.

*ekrana yazdırma

WRITE:/'Adınız:', adi.
WRITE:/'Soyadınız:', soyadi.
WRITE:/'Adres:', adres.
WRITE:/'Yaş:', yas.
WRITE:/'Para:', para.
WRITE:/'Tarih:', tarih.

*write komutu kullanımı

WRITE:/ c_pi_sayisi.



*do enddo yapısı


DATA gv_sayilar TYPE i VALUE 0.

DO 10 TIMES.

  gv_sayilar = gv_sayilar + 1.
  WRITE:/ gv_sayilar.
ENDDO.

DATA i TYPE i.
DO 50 TIMES.
  
WRITE i.
i = i + 2.
IF i = 20.
EXIT.
ENDIF.

ENDDO.

*case ifadesi
DATA: sayi1 TYPE i VALUE 20,
      sayi2 TYPE i VALUE 10,
      islem TYPE i VALUE 4,
      sonuc TYPE i.

CASE islem.
  WHEN 1.
    sonuc = sayi1 + sayi2.
    WRITE:/ 'Toplam:', sonuc.
  WHEN 2.
    
    IF sayi2 > sayi1.
    WRITE:/'İkinci sayı biinci sayıdan büyük olamaz.'.
    EXIT.
    ENDIF.
    sonuc = sayi1 - sayi2.
    WRITE:/ 'Fark:', sonuc.
  WHEN 3.
    sonuc = sayi1 * sayi2.
    WRITE:/ 'Çarpım:', sonuc.
  WHEN 4.
    IF sayi2 = 0.
    WRITE:/ 'Payda sıfır olamaz.'.
    EXIT.
    ENDIF.
    sonuc = sayi1 / sayi2.
    WRITE:/ 'Bölüm:', sonuc.  
  WHEN OTHERS.
    WRITE:/ 'Lütfen doğru işlem türü seçiniz'.
ENDCASE.